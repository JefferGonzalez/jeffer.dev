---
const NAVBAR_ITEMS = [
  {
    name: 'Inicio',
    href: '/#'
  },
  {
    name: 'Experiencia',
    href: '#experience'
  },
  {
    name: 'Proyectos',
    href: '#projects'
  },
  {
    name: 'Contacto',
    href: '#contact'
  }
]
---

<nav
  class="p-2 rounded-lg flex justify-between items-center backdrop-blur bg-black bg-opacity-80 sticky top-0 z-50"
>
  <div class="flex items-center">
    <img src="/logo.webp" alt="Jeffer González Logo" class="w-8 h-8 mr-2" />
    <span class="hidden sm:block font-bold text-lg">
      &lt;JefferGonzález /&gt;
    </span>
  </div>

  <div class="hidden sm:flex space">
    {
      NAVBAR_ITEMS.map(({ href, name }) => (
        <a
          href={href}
          class="hover:bg-zinc-900 rounded-lg px-2 py-1 transition-all duration-300 ease-in-out"
        >
          {name}
        </a>
      ))
    }
  </div>

  <div class="sm:hidden">
    <button
      id="hamburger"
      class="focus:outline-none hover:bg-zinc-950 rounded-lg px-2 py-1 transition-all duration-300 ease-in-out"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>
</nav>

<script type="module">
  const hamburgerButton = document.getElementById('hamburger')
  const navLinks = document.querySelector('.sm\\:flex')

  hamburgerButton.addEventListener('click', () => {
    navLinks.classList.toggle('hidden')
  })
</script>
